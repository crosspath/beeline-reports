<p id="notice"><%= notice %></p>

<h1>Listing Calls</h1>

<table>
  <thead>
    <tr>
      <th>Subscriber</th>
      <th>Call date</th>
      <th>Length</th>
      <th>Length r</th>
      <th>Cost</th>
      <th>Caller</th>
      <th>Receiver</th>
      <th>Action</th>
      <th>Service</th>
      <th>Service type</th>
      <th>Volume</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @calls.each do |call| %>
      <tr>
        <td><%= call.subscriber %></td>
        <td><%= call.call_date %></td>
        <td><%= call.length %></td>
        <td><%= call.length_r %></td>
        <td><%= call.cost %></td>
        <td><%= call.caller %></td>
        <td><%= call.receiver %></td>
        <td><%= call.action %></td>
        <td><%= call.service %></td>
        <td><%= call.service_type %></td>
        <td><%= call.volume %></td>
        <td><%= link_to 'Show', call %></td>
        <td><%= link_to 'Edit', edit_call_path(call) %></td>
        <td><%= link_to 'Destroy', call, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

